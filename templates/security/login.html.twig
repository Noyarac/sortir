{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Se connecter {% endblock %}

{% block body %}
    <div class="container" style="max-width: 60ch;">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <h1 class="h3 my-4 pt-4 font-weight-normal">Se connecter</h1>
            <label for="username">Login (Email ou Pseudo)</label>
            <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control mb-3" autocomplete="email" required autofocus>
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control mb-3" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
            <p style="text-align: end;">
            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
            </p>
            <div class="checkbox mb-2">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Se souvenir de moi</label>
            </div>
            <button class="btn btn-lg btn-primary my-2" type="submit">Se connecter</button>
        </form>
    </div>
{% endblock %}
