{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Mon profil
{% endblock %}

{% block body %}
	<div class="container">
		<h3>Mon Profil</h3>
		{{ form_start(userForm) }}
		<img class="mt-4 img-thumbnail" style="max-width: 200px" src="{{ asset(profilePicturesDirectory ~ '/' ~ user.id) }}" onerror="this.src='{{ asset(profilePicturesDirectory ~ '/default.jpg')}}'">
		{{ form_widget(userForm) }}
		<button type="submit" class="btn btn-primary">Enregistrer</button>
		{{ form_end(userForm) }}
	</div>
{% endblock %}
