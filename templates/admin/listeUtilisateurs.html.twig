{% extends 'base.html.twig' %}

{% block title %}{{parent()}}| Liste utilisateurs{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div class="mb-3 d-flex align-items-center justify-content-between">
                <h3>Ajout utilisateur(s)</h3>
                <a href="{{ path('admin_creerUtilisateur') }}" class="btn btn-secondary">Ajouter un nouvel utilisateur</a>
                {{ form_start(userImportForm) }}
                {{ form_widget(userImportForm) }}
                    <button type="submit" class="btn btn-secondary"></button>
                {{ form_end(userImportForm) }}
            </div>
        </div>
    </section>
    <hr>
    <section>
        <div class="container">
            <h3>Liste utilisateurs</h3>
            {% if listeUtilisateurs is not empty %}
            <table class="table">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Campus</th>
                    <th>Compte actif</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for utilisateur in listeUtilisateurs %}
                    <tr>
                        <td><a href="{{ path('profil_afficher', {'id': utilisateur.id}) }}">{{ utilisateur.pseudo }}</a></td>
                        <td>{{ utilisateur.campus}}</td>
                        <td>{{ utilisateur.actif ? "âœ”" : "" }}</td>
                        <td>
                            <a href="{{ path('admin_modifierProfilUtilisateurs', {'id' : utilisateur.id}) }}" class="btn btn-outline-secondary mb-1 w-100">Modifier</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            {% endif %}
            </table>
        </div>
    </section>
{% endblock %}
